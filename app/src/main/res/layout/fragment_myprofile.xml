<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@android:color/background_light">


    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:src="@drawable/default_user_white" />

    <RelativeLayout android:id="@+id/rlPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_toRightOf="@id/ivProfileImage">

        <TextView
            android:id="@+id/tvUpdatePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update photo"
            android:textColor="@color/login_inactive"
            android:textSize="12sp"/>
        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_below="@id/tvUpdatePhoto"
            android:src="@drawable/ic_add_photo"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/ivGallery"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_marginLeft="3dp"
            android:layout_below="@id/tvUpdatePhoto"
            android:src="@drawable/ic_photo_gallery_24dp"
            android:layout_toEndOf="@+id/ivCamera" />

    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlPhoto">

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Alexandr Climov"
            android:textColor="@color/text_accent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_margin="25dp"
            android:layout_below="@+id/tvFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:weightSum="10"
            android:id="@+id/llStatusLine">

            <ImageView
                android:id="@+id/ivStatus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                app:srcCompat="@android:drawable/sym_action_chat"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tvStatusLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This line will contains just simple data like today's status"
                android:textColor="@color/text_accent"
                android:textSize="14sp"
                android:layout_weight="8"/>
        </LinearLayout>


        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlProfileHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ivProfileImage"
        android:layout_marginTop="36dp">


        <Button
            android:id="@+id/btSave"
            style="@style/SaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="139dp"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:visibility="invisible"
            tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry">

        </Button>


    </RelativeLayout>

</RelativeLayout>
