<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myProfile"
    android:background="@android:color/background_light">

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:src="@drawable/studyowl" />-->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="17dp"
        android:text="Tag Line"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp"
        android:text="Location"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="277dp"
        android:text="Name"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rlProfileHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/btGalPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Gallery"
            tools:ignore="HardcodedText"
            android:layout_alignBaseline="@+id/btSave"
            android:layout_alignBottom="@+id/btSave"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_shape"
            android:hint="@string/from"
            android:inputType="textMultiLine"
            android:textColor="@color/text_accent"
            tools:ignore="RtlHardcoded"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/etUserName"
            android:layout_alignStart="@+id/etUserName" />

        <EditText
            android:id="@+id/etTagLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="@drawable/rounded_shape"
            android:ems="10"
            android:hint="@string/about_you"
            android:inputType="textPersonName"
            android:textColor="@color/text_accent"
            tools:ignore="LabelFor,RtlHardcoded"
            android:layout_below="@+id/etLocation"
            android:layout_alignStart="@+id/etLocation"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/imgCorners"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="32dp"
            android:adjustViewBounds="true"
            android:src="@drawable/image_round_corner"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:background="@drawable/image_round_corner"
            android:padding="2dp"
            android:src="@drawable/studyowl"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:layout_alignTop="@+id/imgCorners"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/rounded_shape"
            android:ems="10"
            android:hint="@string/your_name"
            android:inputType="textPersonName"
            android:textColor="@color/text_accent"
            android:textSize="18sp"
            android:layout_below="@+id/btGalPic"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btSnapPic"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:clickable="true"
            android:text="@string/proPic"
            tools:ignore="HardcodedText"
            android:layout_alignTop="@+id/btGalPic"
            android:layout_toStartOf="@+id/ivProfileImage"
            android:layout_alignBottom="@+id/btGalPic" />

        <EditText
            android:id="@+id/etShareNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etTagLine"
            android:layout_below="@+id/etTagLine"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_shape"
            android:ems="10"
            android:hint="@string/share_notes"
            android:inputType="textMultiLine"
            android:textColor="@color/text_accent"
            tools:ignore="NotSibling" />

        <Button
            android:id="@+id/btSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/action_button_round"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="@string/save"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry"
            android:layout_below="@+id/ivProfileImage"
            android:layout_alignParentEnd="true">

        </Button>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="17dp"
        android:text="Tag Line"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Notice to Groups"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

</RelativeLayout>
