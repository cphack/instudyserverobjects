<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@android:color/background_light">

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:src="@drawable/studyowl" />-->

    <RelativeLayout
        android:id="@+id/rlProfileHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp">

        <Button
            android:id="@+id/btGalPic"
            style="@style/GalleryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btSave"
            android:layout_alignBottom="@+id/btSave"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etUserName"
            android:layout_below="@+id/etUserName"
            android:background="@drawable/rounded_shape"
            android:hint="@string/from"
            android:inputType="textMultiLine"
            android:textColor="@color/text_accent"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/etTagLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etLocation"
            android:layout_below="@+id/etLocation"
            android:layout_marginRight="3dp"
            android:background="@drawable/rounded_shape"
            android:ems="10"
            android:hint="@string/about_you"
            android:inputType="textPersonName"
            android:textColor="@color/text_accent"
            tools:ignore="LabelFor,RtlHardcoded" />

        <ImageView
            android:id="@+id/imgCorners"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="32dp"
            android:adjustViewBounds="true"
            android:src="@drawable/image_round_corner"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignTop="@+id/imgCorners"
            android:layout_centerHorizontal="true"
            android:background="@drawable/image_round_corner"
            android:padding="2dp"
            android:src="@drawable/studyowl"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btGalPic"
            android:layout_below="@+id/btSave"
            android:background="@drawable/rounded_shape"
            android:ems="10"
            android:hint="@string/your_name"
            android:inputType="textPersonName"
            android:textColor="@color/text_accent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btSnapPic"
            style="@style/CamButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignBottom="@+id/btGalPic"
            android:layout_alignTop="@+id/btGalPic"
            android:layout_toStartOf="@+id/ivProfileImage"
            android:clickable="true"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etShareNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btGalPic"
            android:layout_below="@+id/etTagLine"
            android:background="@drawable/rounded_shape"
            android:ems="10"
            android:hint="@string/share_notes"
            android:inputType="textMultiLine"
            android:textColor="@color/text_accent"
            tools:ignore="NotSibling" />

        <Button
            android:id="@+id/btSave"
            style="@style/SaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ivProfileImage"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry">

        </Button>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etLocation"
            android:layout_alignBottom="@+id/etLocation"
            android:layout_alignStart="@+id/imgCorners"
            android:text="@string/location"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:text="@string/name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etShareNotes"
            android:layout_alignBottom="@+id/etShareNotes"
            android:layout_alignStart="@+id/textView3"
            android:text="@string/notice"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="@string/tag_line"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:text="@string/timeline"
            android:textSize="12sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lvTimeLine"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/rlProfileHeader"
        android:layout_alignParentStart="true" />

</RelativeLayout>
