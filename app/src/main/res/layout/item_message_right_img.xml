<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">


    <ImageView
        android:id="@+id/img_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:background="@drawable/chat_text_round_right"
        android:padding="1dp"
        android:layout_toStartOf="@+id/ivCorner"
        />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/img_chat"
        android:layout_below="@id/img_chat"
        android:textSize="10sp"
        android:text="now"/>


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="7dp"
        android:id="@+id/ivCorner"
        android:src="@drawable/mcloudelemright"
        android:layout_above="@+id/timestamp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/txtMessage"
        />

    <ImageView
        android:id="@+id/ivUserChat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:visibility="invisible" />

</RelativeLayout>