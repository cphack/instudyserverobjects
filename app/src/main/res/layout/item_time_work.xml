<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="20dp"
    android:orientation="horizontal"
    android:weightSum="8">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_marginLeft="7dp"
            android:layout_width="1dip"
            android:layout_height="10dp"
            android:background="@color/text_not_accent" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/listcircle"/>
        <View
            android:layout_marginLeft="7dp"
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:background="@color/text_not_accent" />


    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="2"
        android:text="03 Jun-28 Aug"
        android:textColor="@color/text_not_accent"
        android:textSize="12sp" android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="4"
        android:text="Intern at Google Market. dept."
        android:textColor="@color/text_accent"
        android:textSize="12sp" />

</LinearLayout>
