<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Functional programming C++"
        android:textColor="@color/text_accent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rlDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCourseName">

        <TextView
            android:id="@+id/tvAboutCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="ABOUT THIS COURSE"
            android:textColor="@color/text_not_accent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAboutCourse"
            android:layout_marginTop="5dp"
            android:text="This course was designed for reference librarians and readers who need health statistics.
The course emphasizes improved research library service based on an appreciation of the sources, limits and uses of health statistics.
"
            android:textColor="@color/text_accent"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlDescription"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/llIcons">

        <RelativeLayout android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="0dp">
            <ImageView
                android:id="@+id/ivLectionsIcons"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_lection_icon"
                 />

            <TextView
                android:id="@+id/tvNumLections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="5 courses"
                android:textColor="@color/text_accent"
                android:textSize="10sp"
                android:layout_below="@id/ivLectionsIcons"/>
        </RelativeLayout>
        <RelativeLayout android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="0dp">
            <ImageView
                android:id="@+id/ivAssignment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_assign_icon"
                />

            <TextView
                android:id="@+id/tvNumAssignments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="3 assignments"
                android:textColor="@color/text_accent"
                android:textSize="10sp"
                android:layout_below="@id/ivAssignment"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="MENTOR"
        android:textColor="@color/text_not_accent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/llIcons"/>



    <ImageView
        android:id="@+id/ivTeacherImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_user_white"
        android:layout_below="@+id/tvTeacher"/>

    <TextView
        android:layout_below="@+id/ivTeacherImage"
        android:id="@+id/tvTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Alexandr Climov"
        android:textColor="@color/text_accent"
        android:textSize="16sp"
         />

</RelativeLayout>
