<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNumOfFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="25 friends will attend this course "
        android:textSize="10sp"
        android:textColor="@color/text_accent"/>

    <TextView
        android:id="@+id/tvNewCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="This is new course!"
        android:textSize="16sp"
        android:textColor="@color/text_accent"/>

    <ImageView
        android:id="@+id/ivPerson1"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/ivPerson2"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/ivPerson3"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/ivPerson4"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/ivPerson5"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/more"/>




</RelativeLayout>