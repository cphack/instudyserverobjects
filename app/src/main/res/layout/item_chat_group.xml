<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="7">
    <ImageView
        android:id="@+id/ivGroupIcon"
        android:contentDescription="@string/profile_other"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="2"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5">
        <TextView
            android:textSize="16sp"
            android:id="@+id/tvCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group chat">
        </TextView>
        <TextView
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:id="@+id/tvGroupNum"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="5 members">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCaption"
            android:layout_alignLeft="@+id/tvCaption">
            <ImageView
                android:id="@+id/ivLastMessageUser"
                android:contentDescription="@string/profile_other"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_launcher"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvLastMessage"
                android:lines="2"
                android:layout_weight="6"
                android:text="so we need to speak bout this tomorrow">
            </TextView>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>