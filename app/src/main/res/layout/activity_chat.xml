<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_back_color">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_back_color"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:id="@+id/toolbar_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivChatter1"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/ivChatter2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/ivChatter1" />

            <ImageView
                android:id="@+id/ivChatter3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/ivChatter2" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ivChatter3">

                <TextView
                    android:id="@+id/etFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/ivChatter1"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/etOnLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etFullName"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="OnLine"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <EditText
            android:id="@+id/etText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/lvMessages"
            android:layout_toEndOf="@+id/btnGallery" />


        <ImageView
            android:id="@+id/btnSend"
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/lvMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnSend"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />


        <ImageView
            android:id="@+id/btnGallery"
            android:src="@drawable/ic_photo_gallery_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"

            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnPhoto" />

        <ImageView
            android:id="@+id/btnPhoto"
            android:src="@drawable/ic_add_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</RelativeLayout>