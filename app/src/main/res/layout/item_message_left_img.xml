<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/ivUserChat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/img_chat"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:background="@drawable/chat_text_round_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="1dp"
        android:layout_toEndOf="@+id/ivCorner" />




    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtMessage"
        android:layout_below="@id/txtMessage"
        android:text="now"
        android:textSize="10sp" />


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/ivCorner"
        android:src="@drawable/mcloudelemleft"
        android:layout_alignBottom="@+id/txtMessage"
        android:layout_toEndOf="@+id/ivUserChat" />
</RelativeLayout>